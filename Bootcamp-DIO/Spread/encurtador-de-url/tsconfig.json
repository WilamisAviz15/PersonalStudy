{
  "compilerOptions": {
    "baseUrl": "./src",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noEmit": false,
    "noEmitOnError": false,
    "noImplicitAny": true,
    "target": "es2016",    
    "removeComments": true,  
    "preserveConstEnums": true,    
    "outDir": "./dist",   
    "rootDir": "./src/",    
    "sourceMap": true,                 
    "module": "commonjs",                               
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true ,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true                        
  }
}
